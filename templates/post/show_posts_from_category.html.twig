{% extends 'layout/base.html.twig' %}

{% block content %}

    <h1 class="text-center mt-3"> Cat√©gorie {{ category.name }}</h1>

    {% if posts is not empty %}

        <div class="col-9 mx-auto mb-5">

            {% for post in posts %}
                <div class="row mb-4">

                    <div class="col-5 mr-3">
                        <a title="Voir l'article" href="{{ path('show_post', {'cat_alias': post.category.alias, 'post_alias': post.alias, 'id': post.id}) }}">
                            <img src="{{ asset('uploads/' ~ post.photo) }}" alt="{{ post.title }}" class="img-fluid rounded shadow">
                        </a>
                    </div>

                    <div class="col-7">
                        <a href="" class="text-decoration-none text-dark"><h3>{{ post.title }}</h3></a>
                        <p>{{ post.subtitles}}</p>
                    </div>

                </div>
            {% endfor %}

        </div>

    {% endif %}

{% endblock %}