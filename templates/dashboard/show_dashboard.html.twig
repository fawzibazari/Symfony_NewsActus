{% extends 'layout/base.html.twig' %}

{% block content %}

    <h2 class="text-center">Tableau de bord Administrateur</h2>

    <div class="row">
        <div class="col-12 mx-auto">
            {% include 'components/_flashes.html.twig' %}
        </div>
    </div>

    <h3 class="text-center">Tous les articles</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Catégorie</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Créé le</th>
                <th>Modifié le</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.category.name }}</td>
                    <td>{{ post.title | length > 20 ? post.title | slice(0,20) ~ '...' : post.title }}</td>
                    <td>{{ post.content | length > 20 ? post.content | slice(0,20) ~ '...' : post.content }}</td>
                    <td>{{ post.createdAt | date('d/m/Y') }}</td>
                    <td>{{ post.updatedAt | date('d/m/Y') }}</td>
                    <td>
                        <a href="{{ path('update_post', {'id': post.id}) }}" class="btn btn-info"><i class="fa fa-edit"></i></a> |
                        <a href="{{ path('soft_delete_post', {'id': post.id}) }}" class="btn btn-danger" onclick="return confirm('ATTENTION : Voulez-vous vraiment supprimer cet article ?')"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <div class="col-6">
            <h3 class="text-center">Toutes les catégories</h3>

            <table class="table mt-4">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>

                    {% for category in categories %}
                        <tr>
                            <td>{{ category.id }}</td>
                            <td>{{ category.name }}</td>
                            <td>
                                <a href="#" class="btn btn-info"><i class="fa fa-edit"></i></a> |
                                <a href="#" class="btn btn-danger" onclick="return confirm('ATTENTION : Voulez-vous vraiment supprimer cette catégorie ?')"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    {% endfor %}

                </tbody>
            </table>
        </div> {# end .col-6 #}

        <div class="col-6">
            <h3 class="text-center">Tous les utilisateurs</h3>

            <table class="table mt-4">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Prénom</th>
                        <th>Nom</th>
                        <th>Rôle</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% if users is not null %}

                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.roles[0] }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                <a href="#" class="btn btn-info"><i class="fa fa-edit"></i></a> |
                                <a href="#" class="btn btn-danger" onclick="return confirm('ATTENTION : Voulez-vous vraiment supprimer cet utilisateur ?')"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    {% endfor %}

                {% endif %}
                </tbody>
            </table>
        </div>

    </div>{# end .row #}
{% endblock %}