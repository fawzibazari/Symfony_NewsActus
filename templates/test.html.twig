{% extends 'layout/base.html.twig' %}

{% block content %}

    <div class="row">
        <h1 class="col-12 text-center my-2">Test</h1>
    </div>

    <div class="row">
        <div class="col-12">
            {% include 'components/_flashes.html.twig' %}
        </div>
    </div>

    <div class="row">
        {% for post in posts %} <!-- foreach($articles as $article) -->

            <div class="col-3 my-3 mx-2">
                <div class="card" style="width: 18rem; height: 26rem;">

                    <img style="object-fit: cover;" src="{{ asset('uploads/' ~ post.photo) }}" class="card-img-top img-card-custom" width="230" height="130" alt="{{ post.title }}">

                    <div class="card-body">
                        <h5 class="card-title">{{ post.title | length > 20 ? post.title | slice(0, 20) ~ '...' : post.title }}</h5>
                        <h6 class="card-title">{{ post.subtitles | length > 30 ? post.subtitles | slice(0, 30) ~ '...' : post.subtitles }}</h6>
                        <p class="card-text">{{ post.content | length > 50 ? post.content | slice(0, 50) ~ '...' : post.content }}</p>
                        <a href="{{ path('show_post', {'cat_alias': post.category.alias, 'post_alias': post.alias, 'id': post.id}) }}" class="btn btn-warning d-block mx-auto">Voir l'article</a>
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>

{% endblock %}